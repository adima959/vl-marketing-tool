{
  "enabledPlugins": {
    "claude-md-management@claude-plugins-official": true
  },
  "permissions": {
    "allow": [
      "CD",
      "Edit",
      "Write",
      "Task",
      "Bash",
      "Grep",
      "Find",
      "FIND *",
      "WebFetch",
      "Bash(npm *)",
      "Bash(npx *)",
      "Bash(node *)",
      "Bash(git *)",
      "Bash(gh *)",
      "Bash(psql *)",
      "Bash(curl *)",
      "Bash(ls *)",
      "Bash(mkdir *)",
      "Bash(cp *)",
      "Bash(mv *)",
      "Bash(touch *)",
      "Bash(which *)",
      "Bash(test *)",
      "Bash(echo *)",
      "Bash(node -e *)",
      "Bash(npx tsc *)",
      "Bash(rm *)",
      "Bash(rm -rf *)",
      "Bash(rmdir *)",
      "Bash(chmod *)",
      "Bash(lsof *)",
      "Bash(kill *)",
      "Bash(python3 *)",
      "Bash(open *)",
      "Bash(grep *)",
      "Bash(xargs kill:*)",
      "Bash(export PATH=\"/opt/homebrew/bin:/usr/local/bin:$PATH\")",
      "Bash(/opt/homebrew/Cellar/node/25.6.0/bin/npx tsx scripts/verify-onpage-crm.ts)",
      "Bash(/Users/adi/Programming/vl-marketing-tool/node_modules/.bin/tsc:*)",
      "Bash(node_modules/.bin/next build:*)",
      "Skill(frontend-design)",
      "Skill(init)",
      "Skill(init *)",
      "Skill(code-review)",
      "Skill(code-review:*)",
      "Skill(plan)",
      "Skill(plan:*)",
      "mcp__browsermcp__browser_navigate",
      "mcp__browsermcp__browser_go_back",
      "mcp__browsermcp__browser_go_forward",
      "mcp__browsermcp__browser_snapshot",
      "mcp__browsermcp__browser_click",
      "mcp__browsermcp__browser_hover",
      "mcp__browsermcp__browser_type",
      "mcp__browsermcp__browser_select_option",
      "mcp__browsermcp__browser_press_key",
      "mcp__browsermcp__browser_wait",
      "mcp__browsermcp__browser_get_console_logs",
      "mcp__browsermcp__browser_screenshot"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/validate-commit.js",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/block-push.js",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/block-dangerous-git.js",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "node -e \"const{execSync}=require('child_process');const fs=require('fs');const path=require('path');let d='';process.stdin.on('data',c=>d+=c);process.stdin.on('end',()=>{const i=JSON.parse(d);const p=i.tool_input?.file_path||'';if(!/\\.(ts|tsx)$/.test(p))process.exit(0);if(!fs.existsSync(p))process.exit(0);let dir=path.dirname(p);while(dir!==path.dirname(dir)&&!fs.existsSync(path.join(dir,'tsconfig.json'))){dir=path.dirname(dir)}if(!fs.existsSync(path.join(dir,'tsconfig.json')))process.exit(0);try{execSync('npx tsc --noEmit --pretty false 2>&1',{cwd:dir,encoding:'utf8',stdio:['pipe','pipe','pipe']})}catch(e){const lines=(e.stdout||'').split('\\n').filter(l=>l.includes(path.basename(p))).slice(0,10);if(lines.length){console.error('[Hook] TypeScript errors in '+path.basename(p)+':');lines.forEach(l=>console.error('  '+l));process.exit(2)}}})\"",
            "timeout": 30
          }
        ]
      },
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/check-imports.js",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/check-sql-injection.js",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/check-secrets.js",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
